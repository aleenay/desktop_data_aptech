@model IEnumerable<project_ecommerce.Models.TblProduct>

@{
    ViewData["Title"] = "FetchProducts";
    Layout = "~/Views/Shared/user_layout.cshtml";
}

<h1>FetchProducts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{ 
               <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Content(item.PImg)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"> @Html.DisplayFor(modelItem => item.PName)</h5>
                <p> @Html.DisplayFor(modelItem => item.PPrice)</p>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.PDes)</p>
                <a asp-action="add_to_cart" asp-route-id="@item.PId">Add to cart</a>
            </div>
        </div> 
}

